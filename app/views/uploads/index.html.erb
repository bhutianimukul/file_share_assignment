<div class="container mt-5 pt-5">
    <h1 class="text-center">File Dashboard - <%= @files.count %> files</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Upload Date</th>
          <th>Size</th>
          <th>Actions</th>
          <th>Sharing</th>
        </tr>
      </thead>
      <tbody>
        <% @files.each do |file| %>
          <tr>
            <td><%= file.name %></td>
            <td><%= file.created_at.strftime("%d %B %Y") %></td>
            <td><%= file.size %></td>
            <td>
              <%= link_to 'Download', user_download_option_path(user_id: logged_in_user.id, file_id: file.id), method: :post, class: 'btn btn-primary btn-sm' %>
              <%= button_to 'Delete', user_file_delete_path(user_id: logged_in_user.id, file_id: file.id), 
               method: :delete, 
               onclick: "return confirm('Are you sure you want to delete this file?') ? true : false;",
               class: 'btn btn-danger btn-sm' %>
    </td>
            </td>
            <td>
              <div class="form-check form-switch">
                <%= form_for :upload, url: update_public_path(file.id), html: { class: 'form-inline' } do |f| %>
                    <%= f.check_box :is_public_updated, checked: file.is_public, class: "custom-class", 
                        onchange: "event.stopPropagation(); if(!confirm('Are you sure you want to change the visibility of this file?')) { this.checked = !this.checked; } else { this.form.submit(); }" %>
                <% end %>
                <% if file.is_public %>
                    <label class="form-check-label" for="sharingSwitch<%= file.id %>">
                    <%= link_to 'Link', user_view_path(user_id: logged_in_user.id, file_id: file.id), target: '_blank', class: 'file-link' %>
                    </label>
                <% else %>
                    Private File
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="text-center mt-4">
      <%= link_to 'Upload Files', upload_file_path, class: 'btn btn-success' %>
    </div>
</div>
