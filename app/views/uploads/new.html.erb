<div class="container mt-5">
    <%= form_for :upload, url: file_path, html: { multipart: true } do |form| %>
        
     

        <div class="mb-3 mt-4 pt-4">
            <%= form.label :file, "Upload File" %>
            <%= form.file_field :file, class: "form-control", required: true%>
        </div>

        <div class="form-group mb-3  row align-items-center">
            <div class="col">
                <div class="form-check">
                    <%= form.check_box :is_public, { class: "form-check-input" }, true, false %>
                    <%= form.label :is_public, "Is Public?", class: "form-check-label" %>
                </div>
            </div>
        </div>

        <%= form.submit "Upload File", class: "btn btn-success btn-lg btn-block", data: { disable_with: "Uploading..." } %>

    <% end %>
</div>
